{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "types": ["node", "@playwright/test"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": [
    "playwright.config.ts",
    "e2e/todos/tests/**/*.ts",
    "e2e/todos/pages/**/*.ts",
    "e2e/todos/fixtures/**/*.ts",
    "e2e/todos/helpers/**/*.ts"
  ],
  "exclude": ["node_modules", "playwright-report", "test-results"]
}
